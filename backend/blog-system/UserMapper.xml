<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.dao.UserMapper">
    
    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.blog.entity.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            username, password, email, avatar, role, status, bio, 
            create_time, update_time
        ) VALUES (
            #{username}, #{password}, #{email}, #{avatar}, #{role}, #{status}, #{bio},
            NOW(), NOW()
        )
    </insert>
    
    <!-- 更新用户信息 -->
    <update id="update" parameterType="com.blog.entity.User">
        UPDATE user SET
            email = #{email},
            avatar = #{avatar},
            bio = #{bio},
            update_time = NOW()
        WHERE id = #{id}
    </update>
    
    <!-- 根据邮箱查询用户 -->
    <select id="findByEmail" parameterType="string" resultType="com.blog.entity.User">
        SELECT * FROM user WHERE email = #{email}
    </select>
    
    <!-- 获取用户数量 -->
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM user
    </select>
    
</mapper>
